{
  "name": "vscode-go-cd",
  "displayName": "Go CD Pipeline",
  "description": "Provides information about the current status of your Go CD pipelines",
  "version": "0.0.1",
  "publisher": "inlustra",
  "engines": {
    "vscode": "^1.11.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "goCdPipelines.setGlobalConfig",
        "title": "Go CD: Set Global Config"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Go CD Pipeline Configuration",
      "properties": {
        "goCdPipelines.url": {
          "type": "string",
          "default": null,
          "description": "The base URL for the Go CD Pipeline requests"
        },
        "goCdPipelines.username": {
          "type": "string",
          "default": null,
          "description": "The username for the Go CD Pipelines requests"
        },
        "goCdPipelines.password": {
          "type": "string",
          "default": null,
          "description": "The password for the Go CD Pipelines requests"
        },
        "goCdPipelines.pipeline": {
          "type": "string",
          "default": null,
          "description": "The pipeline to display the short information for in the status bar."
        },
        "goCdPipelines.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "The amount of time between refreshing the pipeline info"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/request-promise-native": "^1.0.3",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "rx-http-request": "^1.2.0",
    "rxjs": "^5.3.0"
  }
}
